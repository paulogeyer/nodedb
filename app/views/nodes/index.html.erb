<h1>Listing nodes</h1>

<table>
  <thead>
    <tr>
      <th>Lat</th>
      <th>Lng</th>
      <th>User</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
	<div id="map_canvas"></div>
  <tbody data-nodes="<%= @nodes.to_json %>">
    <% @nodes.each do |node| %>
      <tr>
        <td><%= node.lat %></td>
        <td><%= node.lng %></td>
        <td><%= node.user.email %></td>
        <td><%= link_to 'Show', node %></td>
        <td><%= link_to 'Edit', edit_node_path(node) %></td>
        <td><%= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user %>
<%= link_to 'New Node', new_node_path %>
<% end %>
